<div class="col-md-4">
    <div class="card mb-4 box-shadow" data-id="<%= portfolio_item.id %>">
    <%= image_tag portfolio_item.thumb_image.to_s, class: "card-img-top" %>
    <div class="card-body">
    <%=link_to portfolio_show_path(portfolio_item) do %>
    <%=content_tag(:h5,portfolio_item.title, class:"card-title", style: "color:black;")%>
    <%end%>
    <%=content_tag(:h8,portfolio_item.subtitle, class:"card-title")%>
    <%=content_tag(:p, portfolio_item.body.truncate(100), class:"card-text")%>
        <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
            <%=content_tag(:a, "View", class: "button btn btn-sm btn-outline-secondary", href: portfolio_show_path(portfolio_item))%>
            <%=content_tag(:a, "Edit", class: "button btn btn-sm btn-outline-warning", href: edit_portfolio_path(portfolio_item)) if logged_in?(:site_admin) %>
            <%=link_to( "Delete", portfolio_path(portfolio_item), class: "button btn btn-sm btn-outline-danger", method: :delete, href: portfolio_path(portfolio_item), data: {confirm: "Are you sure?"}) if logged_in?(:site_admin) %>

        </div>
        </div>
    </div>
    </div>
</div>