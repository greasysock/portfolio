<!DOCTYPE html>
<html>
<!-- theme inspired by n-o-d-e https://n-o-d-e.hashbase.io/index.html -->
  <head>
    <title> <%=@page_title%> </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="keywords" content="<%=@seo_keywords%>"/>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <%=render "shared/fork_me"%>
  <!-- <div id="page"> -->
  <!--bg source https://www.pexels.com/photo/astronomy-astrophotography-clouds-colors-755726/ -->
  <div class="body">

    <%if notice%>
    <p class="alert alert-info"><%= notice %></p>
    <%end%>
    <%if alert%>
    <p class="alert alert-warning"><%= alert %></p>
    <%end%>
    <%= yield %>
    <footer class="mastfoot mt-auto">
    <div class="inner">
      <p><%=@copyright%></p>
    </div>
  </footer>
      <!--</div> -->

  </div>
  </body>
</html>
